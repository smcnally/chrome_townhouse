<script>

$("#showclosed").click(function(){
$(".closed").toggle()
return false;
})

</script>


<style>
.tab{
display: block;
font-size: 20px;
float: left;
background-color: #2c7ad0;
position:relative;

opacity:0.9;
position:absolute;
max-height:50px;
y-overflow:none;
background:steelblue;
top:200px;
color:white;
display:block;
}

.closed{
display:none;
border:1px dotted white;
opacity:0.5;
}
</style>





<% for(var i in tabs){ %>

<a href="<%= tabs[i].url %>"
  <% if( tabs[i].closed ){ %>
   class="tab closed"
  <% }else{ %>
   class="tab"
  <% } %>

style="
left:<%= tabs[i].ratio %>%;
width:<%= 100 - tabs[i].ratio %>%;
top:<%= i*25 %>px;
background-color:<%= tabs[i].colour %>;
opacity:0.7;
"
title="<%= tabs[i].title %>"
>
<%= tabs[i].title.substr(0,25) %> <%= tabs[i].count %>
</a>
<br/>

<% } %>


<a style="color:black; position:absolute; display:inline; top:400px;" href="#" id="showclosed">show closed</a>