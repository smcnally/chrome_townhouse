<script>

$("#showclosed").click(function(){
$(".closed").toggle()
return false;
})

</script>


<style>
.tab{
display: block;
-webkit-transform: rotate(-60deg);  
-moz-transform: rotate(-60deg);
-ms-transform: rotate(-60deg);
-o-transform: rotate(-60deg);
transform: rotate(-60deg);
font-size: 24px;
float: left;
background-color: #2c7ad0;
position:relative;

opacity:0.9;
position:absolute; 
max-height:50px; 
y-overflow:none; 
background:steelblue; 
top:200px;       
color:white;         
display:block; 
}

.closed{
display:none;  
border:1px dotted white;
opacity:0.5;
}
</style>





<% for(var i in tabs){ %>

<a href="<%= tabs[i].url %>"   
  <% if( tabs[i].closed ){ %>
   class="tab closed"
  <% }else{ %>
   class="tab"
  <% } %>

style="
left:<%= tabs[i].ratio %>%; "
title="<%= tabs[i].title %>"
>
<%= tabs[i].title.substr(0,15) %> <%= tabs[i].count %>
</a>     
<br/>

<% } %>


<a style="color:black; position:absolute; display:inline; top:400px;" href="#" id="showclosed">show closed</a>